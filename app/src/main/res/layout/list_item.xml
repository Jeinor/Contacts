<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/first_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/first_name_list"
        android:fontFamily="@font/roboto"
        android:text="Example"
        app:layout_constraintStart_toEndOf="@+id/first_name_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surname_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/second_name_list"
        android:fontFamily="@font/roboto"
        android:text="Example"
        app:layout_constraintStart_toEndOf="@+id/second_name_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_list"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto"
        android:text="Example"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_list" />

    <TextView
        android:id="@+id/email_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_name_list"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/phone_list"
        android:fontFamily="@font/roboto"
        android:text="Example"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/phone_list"
        app:layout_constraintTop_toBottomOf="@+id/second_name_list" />

    <Button
        android:id="@+id/remove_list"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:background="@drawable/delete_24px"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>